---
interface Props {
  title?: string;
  description?: string;
  buttonLabel?: string;
  buttonHref?: string;
}

const {
  title = 'Ready to build yours? Start Configurator',
  description = 'Share your requirements in a few steps and get a tailored scope with timeline.',
  buttonLabel = 'Start Configurator',
  buttonHref = '/configurator'
} = Astro.props;
---

<section class="py-32">
  <div class="max-w-7xl mx-auto px-6">
    <div class="relative bg-primary rounded-[3rem] p-12 md:p-24 overflow-hidden">
      <div class="absolute top-0 right-0 size-96 bg-white/10 rounded-full translate-x-1/2 -translate-y-1/2 blur-3xl"></div>
      <div class="absolute bottom-0 left-0 size-64 bg-slate-900/10 rounded-full -translate-x-1/2 translate-y-1/2 blur-3xl"></div>

      <div class="relative z-10 text-center max-w-3xl mx-auto">
        <h2 class="text-4xl md:text-6xl font-black text-white tracking-tight mb-8">{title}</h2>
        <p class="text-white/80 text-xl mb-12">{description}</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href={buttonHref} class="inline-flex items-center justify-center bg-white text-primary text-lg font-bold px-10 py-5 rounded-2xl hover:bg-slate-50 transition-all shadow-2xl">
            {buttonLabel}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
