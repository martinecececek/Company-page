---
interface Props {
  kicker?: string;
  title: string;
  description?: string;
  align?: 'left' | 'center';
}

const { kicker, title, description, align = 'left' } = Astro.props;
const isCentered = align === 'center';
---

<div class={isCentered ? 'max-w-3xl mx-auto text-center mb-12' : 'max-w-3xl mb-12'}>
  {kicker && (
    <p class="text-primary text-xs font-black tracking-[0.14em] uppercase mb-3">{kicker}</p>
  )}
  <h1 class="text-4xl md:text-5xl font-black tracking-tight text-slate-900 dark:text-white leading-tight mb-5">{title}</h1>
  {description && <p class="text-slate-600 dark:text-slate-400 text-lg max-w-3xl">{description}</p>}
</div>
