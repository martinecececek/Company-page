---
interface Props {
  kind: 'page' | 'detail';
  id: string;
  label: string;
  description?: string;
}

const { kind, id, label, description } = Astro.props;
---

<button
  type="button"
  data-toggle-item
  data-kind={kind}
  data-id={id}
  data-label={label}
  class="cfg-toggle-btn group"
  aria-pressed="false"
>
  <div class="flex items-start justify-between gap-3">
    <div>
      <p class="font-extrabold text-slate-900 dark:text-white text-sm md:text-base">{label}</p>
      {description && <p class="text-xs md:text-sm text-slate-500 dark:text-slate-400 mt-1">{description}</p>}
    </div>
    <span data-state-badge class="cfg-state-badge hidden"></span>
  </div>
</button>
