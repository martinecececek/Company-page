---
interface Props {
  id: string;
  title: string;
  icon: string;
  description: string;
}

const { id, title, icon, description } = Astro.props;
---

<button
  type="button"
  data-toggle-item
  data-kind="feature"
  data-id={id}
  data-label={title}
  class="cfg-feature-card group"
  aria-pressed="false"
>
  <div class="flex items-start justify-between gap-3 mb-3">
    <div class="size-10 rounded-lg bg-primary/10 text-primary flex items-center justify-center">
      <span class="material-symbols-outlined text-[20px]">{icon}</span>
    </div>
    <span data-state-badge class="cfg-state-badge hidden"></span>
  </div>

  <div class="text-left">
    <p class="font-extrabold text-slate-900 dark:text-white mb-1">{title}</p>
    <div class="relative inline-flex items-center gap-1 text-xs text-slate-500 dark:text-slate-400">
      <span>Proč je to důležité</span>
      <span
        data-tooltip-trigger
        class="inline-flex items-center justify-center size-4 rounded-full border border-slate-300 dark:border-slate-600 text-[10px] font-bold"
        >i</span
      >
      <span data-tooltip class="cfg-tooltip">{description}</span>
    </div>
  </div>
</button>
