<script>
  // @ts-nocheck
  document.addEventListener('DOMContentLoaded', () => {
    const toggles = Array.from(document.querySelectorAll('.feature-toggle'));

    /** @type {(card: Element | null) => void} */
    const initializeCardCollapse = (card) => {
      if (!(card instanceof HTMLElement)) return;

      const extraFeatures = Array.from(card.querySelectorAll('.extra-feature'));
      extraFeatures.forEach((item) => {
        const isPreview = item.classList.contains('preview-feature');
        item.classList.toggle('hidden', !isPreview);
      });

      card.classList.add('features-collapsed');
    };

    const cards = Array.from(document.querySelectorAll('.pricing-card-modern'));
    cards.forEach((card) => initializeCardCollapse(card));

    toggles.forEach((toggle) => {
      if (!(toggle instanceof HTMLButtonElement)) return;

      toggle.addEventListener('click', () => {
        const card = toggle.closest('.pricing-card-modern');
        if (!(card instanceof HTMLElement)) return;

        const hiddenFeatures = Array.from(card.querySelectorAll('.extra-feature'));
        const expanded = toggle.getAttribute('aria-expanded') === 'true';
        const nextExpanded = !expanded;

        hiddenFeatures.forEach((item) => {
          const isPreview = item.classList.contains('preview-feature');
          item.classList.toggle('hidden', !nextExpanded && !isPreview);
        });

        card.classList.toggle('features-collapsed', !nextExpanded);

        toggle.setAttribute('aria-expanded', nextExpanded ? 'true' : 'false');
        toggle.innerHTML = nextExpanded
          ? 'Zobrazit méně <span class="material-symbols-outlined text-base">expand_less</span>'
          : 'Zobrazit více <span class="material-symbols-outlined text-base">expand_more</span>';
      });
    });
  });
</script>

