<section class="py-32 bg-slate-50 dark:bg-slate-900/40" id="choices">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-20">
      <span class="bg-primary/10 text-primary border border-primary/20 px-6 py-2 rounded-full text-sm font-black uppercase tracking-widest mb-6 inline-block">
        Flexible Solutions
      </span>
      <h2 class="text-5xl md:text-6xl font-black tracking-tight mb-8">Choose Your Web Strategy</h2>
      <p class="text-slate-600 dark:text-slate-400 text-xl max-w-2xl mx-auto font-medium">
        Tailored packages designed to meet your business needs and accelerate your digital growth.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">

      <!-- Jednoduchý web -->
      <div class="pricing-card-modern">
        <div class="flex justify-between items-start w-full mb-8">
          <div class="bg-blue-50 text-blue-600 px-3 py-1 rounded-full text-[10px] font-bold flex items-center gap-1">
            <span class="material-symbols-outlined text-[14px]">schedule</span>
            DO 5 DNŮ
          </div>
          <div class="bg-slate-900 text-white px-4 py-2 rounded-xl text-right">
            <div class="text-lg font-black leading-none">15 000 Kč</div>
            <span class="text-[8px] uppercase opacity-60 tracking-widest font-bold">CENA</span>
          </div>
        </div>
        <span class="material-symbols-outlined text-primary text-5xl mb-6">web_asset</span>
        <h4 class="text-xl font-extrabold mb-6 tracking-tight">Jednoduchý web</h4>
        <ul class="w-full space-y-3 mb-10 text-left">
          <li class="flex items-center gap-2 text-slate-600 dark:text-slate-300 text-sm font-medium">
            <span class="material-symbols-outlined text-primary text-lg font-bold">check</span>
            Responzivní design
          </li>
          <li class="flex items-center gap-2 text-slate-600 dark:text-slate-300 text-sm font-medium">
            <span class="material-symbols-outlined text-primary text-lg font-bold">check</span>
            Rychlost načítání
          </li>
        </ul>
        <a href="/configurator" class="w-full mt-auto bg-primary text-white font-bold py-4 rounded-xl flex items-center justify-center gap-2 hover:bg-blue-700 transition-all shadow-lg shadow-blue-200 dark:shadow-none">
          <span class="material-symbols-outlined text-xl">mail</span>
          Web konfigurátor
        </a>
      </div>

      <!-- Web pro podnikatele -->
      <div class="pricing-card-modern border-primary/50 ring-2 ring-primary/40 bg-gradient-to-b from-primary/10 to-white dark:to-slate-800 lg:-mt-6 lg:scale-[1.08] hover:lg:scale-[1.1] hover:-translate-y-2 shadow-2xl shadow-primary/35">
        <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-primary text-white text-[10px] font-black px-6 py-2 rounded-full uppercase tracking-widest shadow-xl shadow-primary/40">
          Nejoblíbenější
        </div>
        <div class="flex justify-between items-start w-full mb-8">
          <div class="bg-blue-50 text-blue-600 px-3 py-1 rounded-full text-[10px] font-bold flex items-center gap-1">
            <span class="material-symbols-outlined text-[14px]">schedule</span>
            DO 12 DNŮ
          </div>
          <div class="bg-slate-900 text-white px-4 py-2 rounded-xl text-right">
            <div class="text-lg font-black leading-none">35 000 Kč</div>
            <span class="text-[8px] uppercase opacity-60 tracking-widest font-bold">CENA</span>
          </div>
        </div>
        <span class="material-symbols-outlined text-primary text-5xl mb-6">person</span>
        <h4 class="text-xl font-extrabold mb-6 tracking-tight">Web pro podnikatele</h4>
        <ul class="w-full space-y-3 mb-10 text-left">
          <li class="flex items-center gap-2 text-slate-600 dark:text-slate-300 text-sm font-medium">
            <span class="material-symbols-outlined text-primary text-lg font-bold">check</span>
            Portfolio &amp; Reference
          </li>
          <li class="flex items-center gap-2 text-slate-600 dark:text-slate-300 text-sm font-medium">
            <span class="material-symbols-outlined text-primary text-lg font-bold">check</span>
            SEO optimalizace
          </li>
        </ul>
        <a href="/configurator" class="w-full mt-auto bg-primary text-white font-bold py-4 rounded-xl flex items-center justify-center gap-2 hover:bg-blue-700 transition-all shadow-lg shadow-blue-200 dark:shadow-none">
          <span class="material-symbols-outlined text-xl">mail</span>
          Web konfigurátor
        </a>
      </div>

      <!-- Firemní web -->
      <div class="pricing-card-modern">
        <div class="flex justify-between items-start w-full mb-8">
          <div class="bg-blue-50 text-blue-600 px-3 py-1 rounded-full text-[10px] font-bold flex items-center gap-1">
            <span class="material-symbols-outlined text-[14px]">schedule</span>
            DO 25 DNŮ
          </div>
          <div class="bg-slate-900 text-white px-4 py-2 rounded-xl text-right">
            <div class="text-lg font-black leading-none">50 000 Kč</div>
            <span class="text-[8px] uppercase opacity-60 tracking-widest font-bold">CENA</span>
          </div>
        </div>
        <span class="material-symbols-outlined text-primary text-5xl mb-6">corporate_fare</span>
        <h4 class="text-xl font-extrabold mb-6 tracking-tight">Firemní web</h4>
        <ul class="w-full space-y-3 mb-10 text-left">
          <li class="flex items-center gap-2 text-slate-600 dark:text-slate-300 text-sm font-medium">
            <span class="material-symbols-outlined text-primary text-lg font-bold">check</span>
            Vícejazyčnost (CZ/EN)
          </li>
          <li class="flex items-center gap-2 text-slate-600 dark:text-slate-300 text-sm font-medium">
            <span class="material-symbols-outlined text-primary text-lg font-bold">check</span>
            Komplexní CMS řešení
          </li>
        </ul>
        <a href="/configurator" class="w-full mt-auto bg-primary text-white font-bold py-4 rounded-xl flex items-center justify-center gap-2 hover:bg-blue-700 transition-all shadow-lg shadow-blue-200 dark:shadow-none">
          <span class="material-symbols-outlined text-xl">mail</span>
          Web konfigurátor
        </a>
      </div>

    </div>
  </div>
</section>
