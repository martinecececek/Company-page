<script>
  document.addEventListener('DOMContentLoaded', () => {
    const processSection = document.getElementById('process');
    const steps = document.querySelectorAll('.reveal-step');
    const roadmapLine = document.getElementById('roadmapLine');

    const sectionObserver = new IntersectionObserver((entries, observer) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.15 });

    if (processSection) {
      sectionObserver.observe(processSection);
    }

    const observer = new IntersectionObserver((entries, stepObserver) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active');
          stepObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });

    steps.forEach((step, index) => {
      (step as HTMLElement).style.setProperty('--step-delay', `${index * 120}ms`);
      observer.observe(step);
    });

    window.addEventListener('scroll', () => {
      if (!processSection || !roadmapLine) return;
      const sectionTop = processSection.offsetTop;
      const sectionHeight = processSection.offsetHeight;
      const scrollPos = window.scrollY + window.innerHeight / 1.5;
      if (scrollPos > sectionTop) {
        let progress = ((scrollPos - sectionTop) / (sectionHeight - 300)) * 100;
        progress = Math.min(100, Math.max(0, progress));
        (roadmapLine as HTMLElement).style.height = progress + '%';
      }
    });
  });
</script>

<style>
  .section-reveal {
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.7s ease, transform 0.7s ease;
  }

  .section-reveal.active {
    opacity: 1;
    transform: translateY(0);
  }

  .section-heading {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.9s ease 120ms, transform 0.9s ease 120ms;
  }

  .roadmap-path-container {
    z-index: 0;
  }

  .section-reveal.active .section-heading {
    opacity: 1;
    transform: translateY(0);
  }

  .reveal-step {
    position: relative;
    z-index: 2;
    opacity: 0;
    transform: translateY(36px) scale(0.98);
    transition: opacity 0.7s ease, transform 0.7s ease;
    transition-delay: var(--step-delay, 0ms);
  }

  .reveal-step.active {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .reveal-step .process-card-neo {
    opacity: 0;
    transform: translateX(28px);
    transition: opacity 0.6s ease, transform 0.6s ease;
    transition-delay: calc(var(--step-delay, 0ms) + 120ms);
  }

  .reveal-step:nth-of-type(odd) .process-card-neo {
    transform: translateX(-28px);
  }

  .reveal-step.active .process-card-neo {
    opacity: 1;
    transform: translateX(0);
  }

  .reveal-step .pulse-marker {
    position: relative;
    z-index: 3;
    transform: scale(0.82);
    opacity: 0.75;
    transition: transform 0.5s ease, opacity 0.5s ease;
    transition-delay: calc(var(--step-delay, 0ms) + 80ms);
  }

  .reveal-step .pulse-marker > span {
    position: relative;
    z-index: 4;
  }

  .reveal-step.active .pulse-marker {
    transform: scale(1);
    opacity: 1;
    animation: markerPulse 2.4s ease-in-out infinite;
  }

  @keyframes markerPulse {
    0%,
    100% {
      box-shadow: 0 0 24px rgba(19, 91, 236, 0.65);
    }
    50% {
      box-shadow: 0 0 42px rgba(19, 91, 236, 0.95);
    }
  }
</style>
