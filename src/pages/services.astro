---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const coreServices = [
  {
    icon: 'search',
    title: 'Discovery a strategie',
    text: 'Ujasníme cíle, cílovou skupinu a plán, aby projekt dával smysl od začátku.',
    preset: 'landing'
  },
  {
    icon: 'draw',
    title: 'UI/UX design',
    text: 'Navrhneme moderní a přehledný vzhled, který vede uživatele ke konverzi.',
    preset: 'design'
  },
  {
    icon: 'code',
    title: 'Vývoj a implementace',
    text: 'Postavíme rychlý a stabilní web, který je připravený na růst.',
    preset: 'custom-web'
  },
  {
    icon: 'manage_search',
    title: 'SEO a výkon',
    text: 'Optimalizujeme dohledatelnost i rychlost, aby web fungoval lépe pro lidi i vyhledávače.',
    preset: 'seo'
  },
  {
    icon: 'analytics',
    title: 'Měření a reporting',
    text: 'Nastavíme měření a jasné reporty, abyste viděli reálné výsledky.',
    preset: 'analytics'
  },
  {
    icon: 'support_agent',
    title: 'Správa a dlouhodobý rozvoj',
    text: 'Po spuštění pokračujeme podporou, aktualizacemi a dalším rozvojem.',
    preset: 'support'
  }
];

const process = [
  'Kickoff a sběr podkladů',
  'Návrh struktury a designu',
  'Vývoj a testování',
  'Nasazení a měření výsledků',
  'Podpora a další růst'
];

const standards = [
  'Responzivní web pro mobil, tablet i desktop',
  'Rychlé načítání a technické SEO základy',
  'Bezpečnost formulářů a ochrana dat',
  'Měřitelné cíle a pravidelný reporting'
];

const offerHighlights = [
  {
    icon: 'task_alt',
    title: 'Jasný plán a rozpočet',
    text: 'Na začátku víte, co přesně dodáme, v jakém termínu a za jakou cenu.'
  },
  {
    icon: 'palette',
    title: 'Design, který prodává',
    text: 'Web navrhujeme tak, aby byl moderní, přehledný a vedl návštěvníka k akci.'
  },
  {
    icon: 'rocket_launch',
    title: 'Spuštění bez stresu',
    text: 'Postaráme se o technické nasazení, SEO základ i měření od prvního dne.'
  },
  {
    icon: 'handshake',
    title: 'Podpora i po spuštění',
    text: 'Nezůstáváte na to sami. Pokračujeme správou, rozvojem a optimalizací.'
  }
];
---

<Layout title="Služby | NexusDigital">
  <Header />

  <main class="relative overflow-hidden pt-28 pb-20 min-h-screen bg-background-light dark:bg-background-dark px-4 md:px-6">
    <div class="absolute -top-20 -left-20 w-72 h-72 rounded-full bg-primary/10 blur-3xl pointer-events-none"></div>
    <div class="absolute top-40 -right-20 w-80 h-80 rounded-full bg-primary/10 blur-3xl pointer-events-none"></div>

    <section class="max-w-7xl mx-auto relative z-10">
      <div class="max-w-4xl mb-10 md:mb-14">
        <p class="text-primary text-xs font-black tracking-[0.14em] uppercase mb-3">Kompletní služby</p>
        <h1 class="text-4xl md:text-5xl font-black tracking-tight text-slate-900 dark:text-white leading-tight mb-5">
          Služby, které potřebujete pro moderní a funkční web.
        </h1>
        <p class="text-slate-600 dark:text-slate-400 text-lg max-w-3xl">
          Jasně, stručně a bez zbytečné omáčky — od strategie přes realizaci až po podporu po spuštění.
        </p>
      </div>

      <div class="mb-10 md:mb-12 bg-white dark:bg-slate-800/80 border border-slate-200 dark:border-slate-700 rounded-2xl p-5 md:p-6">
        <h2 class="text-2xl font-black text-slate-900 dark:text-white mb-5">Co od nás dostanete</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {offerHighlights.map((item) => (
            <article class="rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50/70 dark:bg-slate-900/40 p-4">
              <div class="size-10 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-3">
                <span class="material-symbols-outlined text-[20px]">{item.icon}</span>
              </div>
              <h3 class="text-base font-extrabold text-slate-900 dark:text-white mb-1.5">{item.title}</h3>
              <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">{item.text}</p>
            </article>
          ))}
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 md:gap-5">
        {coreServices.map((service) => (
          <article class="bg-white dark:bg-slate-800/80 border border-slate-200 dark:border-slate-700 rounded-2xl p-6">
            <div class="size-12 rounded-xl bg-primary/10 text-primary flex items-center justify-center mb-4">
              <span class="material-symbols-outlined">{service.icon}</span>
            </div>
            <h2 class="text-lg font-extrabold text-slate-900 dark:text-white mb-2">{service.title}</h2>
            <p class="text-slate-600 dark:text-slate-400 leading-relaxed text-sm">{service.text}</p>
            <a href={`/configurator?preset=${service.preset}`} class="inline-flex items-center gap-1 mt-4 text-primary font-bold text-sm hover:gap-2 transition-all">
              Start configurator
              <span class="material-symbols-outlined text-base">arrow_forward</span>
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="max-w-7xl mx-auto relative z-10 mt-16 md:mt-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white dark:bg-slate-800/80 border border-slate-200 dark:border-slate-700 rounded-2xl p-6 md:p-7">
          <h3 class="text-2xl font-black text-slate-900 dark:text-white mb-4">Jak probíhá spolupráce</h3>
          <ol class="space-y-3">
            {process.map((step, index) => (
              <li class="flex items-start gap-3">
                <span class="mt-0.5 inline-flex size-6 items-center justify-center rounded-full bg-primary text-white text-xs font-bold">{index + 1}</span>
                <span class="text-slate-700 dark:text-slate-300 text-sm leading-relaxed">{step}</span>
              </li>
            ))}
          </ol>
        </div>

        <div class="bg-white dark:bg-slate-800/80 border border-slate-200 dark:border-slate-700 rounded-2xl p-6 md:p-7">
          <h3 class="text-2xl font-black text-slate-900 dark:text-white mb-4">Standard kvality každého projektu</h3>
          <ul class="space-y-2.5">
            {standards.map((item) => (
              <li class="flex items-start gap-3">
                <span class="material-symbols-outlined text-primary text-[20px] leading-none mt-0.5">check_circle</span>
                <span class="text-slate-700 dark:text-slate-300 text-sm leading-relaxed">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <div class="mt-8 md:mt-10 bg-gradient-to-r from-primary to-blue-500 text-white rounded-2xl p-6 md:p-8 flex flex-col md:flex-row items-start md:items-center justify-between gap-5">
        <div>
          <h3 class="text-2xl font-black mb-2">Chcete nacenění a přesný plán pro váš web?</h3>
          <p class="text-white/90 text-sm md:text-base">Vyplňte konfigurátor a připravíme konkrétní návrh včetně rozsahu služeb.</p>
        </div>
        <a href="/configurator" class="inline-flex items-center justify-center bg-white text-primary font-extrabold px-6 py-3 rounded-xl hover:bg-slate-100 transition-colors">
          Otevřít web konfigurátor
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
