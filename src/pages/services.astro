---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const coreServices = [
  {
    icon: 'search',
    title: 'Discovery a strategie',
    text: 'Analýza cílové skupiny, konkurence, cílů a business modelu. Definujeme jasný plán před začátkem výroby.'
  },
  {
    icon: 'account_tree',
    title: 'Informační architektura',
    text: 'Návrh struktury webu, navigace a priorit obsahu tak, aby uživatel rychle našel to, co hledá.'
  },
  {
    icon: 'draw',
    title: 'UI/UX design',
    text: 'Wireframy, vizuální návrh a interakce postavené na čitelnosti, důvěryhodnosti a konverzi.'
  },
  {
    icon: 'code',
    title: 'Vývoj a implementace',
    text: 'Frontend i backend vývoj s důrazem na čistý kód, rychlost, škálovatelnost a snadnou správu.'
  },
  {
    icon: 'speed',
    title: 'Performance optimalizace',
    text: 'Optimalizace načítání, obrázků, skriptů a Core Web Vitals pro lepší UX i SEO výsledky.'
  },
  {
    icon: 'manage_search',
    title: 'SEO základy i pokročilé',
    text: 'Technické SEO, metadata, strukturovaná data, obsahová struktura a měření organického výkonu.'
  },
  {
    icon: 'security',
    title: 'Bezpečnost a compliance',
    text: 'HTTPS, zabezpečení formulářů, ochrana dat, cookie/GDPR řešení a průběžné bezpečnostní aktualizace.'
  },
  {
    icon: 'rule',
    title: 'QA testování',
    text: 'Testy napříč zařízeními a prohlížeči, validace formulářů, uživatelské scénáře a kontrola funkčnosti.'
  },
  {
    icon: 'integration_instructions',
    title: 'Integrace nástrojů',
    text: 'Napojení CRM, analytiky, plateb, newsletterů, rezervačních systémů a dalších externích služeb.'
  },
  {
    icon: 'analytics',
    title: 'Měření a reporting',
    text: 'Nastavení GA4, konverzí, eventů a dashboardů pro rozhodování na základě reálných dat.'
  },
  {
    icon: 'edit_note',
    title: 'Obsah a copywriting',
    text: 'Struktura textů, CTA, landing page messaging a konzistentní tón komunikace pro vaši značku.'
  },
  {
    icon: 'support_agent',
    title: 'Správa a dlouhodobý rozvoj',
    text: 'Technická podpora, aktualizace, rozšiřování funkcí a průběžné zlepšování výkonu webu.'
  }
];

const process = [
  'Kickoff a sběr podkladů',
  'Analýza trhu a definice cílů',
  'Návrh struktury a wireframů',
  'Grafický design a prototyp',
  'Vývoj a technická implementace',
  'Testování, SEO a bezpečnost',
  'Nasazení a měření výsledků',
  'Podpora a další růst'
];

const standards = [
  'Responzivní design pro mobil, tablet i desktop',
  'Rychlé načítání a optimalizované Core Web Vitals',
  'Technické SEO a správná indexace stránek',
  'Bezpečné formuláře a ochrana citlivých dat',
  'Měřitelné cíle, event tracking a reporting',
  'Snadná editace obsahu pro klientský tým',
  'Přístupnost a čitelnost klíčových částí webu',
  'Pravidelné aktualizace a dlouhodobá udržitelnost'
];
---

<Layout title="Služby | NexusDigital">
  <Header />

  <main class="relative overflow-hidden pt-28 pb-20 min-h-screen bg-background-light dark:bg-background-dark px-4 md:px-6">
    <div class="absolute -top-20 -left-20 w-72 h-72 rounded-full bg-primary/10 blur-3xl pointer-events-none"></div>
    <div class="absolute top-40 -right-20 w-80 h-80 rounded-full bg-primary/10 blur-3xl pointer-events-none"></div>

    <section class="max-w-7xl mx-auto relative z-10">
      <div class="max-w-4xl mb-10 md:mb-14">
        <p class="text-primary text-xs font-black tracking-[0.14em] uppercase mb-3">Kompletní služby</p>
        <h1 class="text-4xl md:text-5xl font-black tracking-tight text-slate-900 dark:text-white leading-tight mb-5">
          Vše, co má profesionální webová agentura dodat od strategie až po dlouhodobý růst.
        </h1>
        <p class="text-slate-600 dark:text-slate-400 text-lg max-w-3xl">
          Tohle je full-scope checklist služeb, které by měla zvládnout každá kvalitní webová společnost.
          Díky tomu víte přesně, co dostáváte a na co se při výběru dodavatele ptát.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 md:gap-5">
        {coreServices.map((service) => (
          <article class="bg-white dark:bg-slate-800/80 border border-slate-200 dark:border-slate-700 rounded-2xl p-6">
            <div class="size-12 rounded-xl bg-primary/10 text-primary flex items-center justify-center mb-4">
              <span class="material-symbols-outlined">{service.icon}</span>
            </div>
            <h2 class="text-lg font-extrabold text-slate-900 dark:text-white mb-2">{service.title}</h2>
            <p class="text-slate-600 dark:text-slate-400 leading-relaxed text-sm">{service.text}</p>
          </article>
        ))}
      </div>
    </section>

    <section class="max-w-7xl mx-auto relative z-10 mt-16 md:mt-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white dark:bg-slate-800/80 border border-slate-200 dark:border-slate-700 rounded-2xl p-6 md:p-7">
          <h3 class="text-2xl font-black text-slate-900 dark:text-white mb-4">Jak probíhá spolupráce</h3>
          <ol class="space-y-3">
            {process.map((step, index) => (
              <li class="flex items-start gap-3">
                <span class="mt-0.5 inline-flex size-6 items-center justify-center rounded-full bg-primary text-white text-xs font-bold">{index + 1}</span>
                <span class="text-slate-700 dark:text-slate-300 text-sm leading-relaxed">{step}</span>
              </li>
            ))}
          </ol>
        </div>

        <div class="bg-white dark:bg-slate-800/80 border border-slate-200 dark:border-slate-700 rounded-2xl p-6 md:p-7">
          <h3 class="text-2xl font-black text-slate-900 dark:text-white mb-4">Standard kvality každého projektu</h3>
          <ul class="space-y-2.5">
            {standards.map((item) => (
              <li class="flex items-start gap-3">
                <span class="material-symbols-outlined text-primary text-[20px] leading-none mt-0.5">check_circle</span>
                <span class="text-slate-700 dark:text-slate-300 text-sm leading-relaxed">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <div class="mt-8 md:mt-10 bg-gradient-to-r from-primary to-blue-500 text-white rounded-2xl p-6 md:p-8 flex flex-col md:flex-row items-start md:items-center justify-between gap-5">
        <div>
          <h3 class="text-2xl font-black mb-2">Chcete nacenění a přesný plán pro váš web?</h3>
          <p class="text-white/90 text-sm md:text-base">Vyplňte konfigurátor a připravíme konkrétní návrh včetně rozsahu služeb.</p>
        </div>
        <a href="/configurator" class="inline-flex items-center justify-center bg-white text-primary font-extrabold px-6 py-3 rounded-xl hover:bg-slate-100 transition-colors">
          Otevřít web konfigurátor
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
